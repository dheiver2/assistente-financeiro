# Configurações do Assistente Financeiro Híbrido
# Copie este arquivo para .env e configure as variáveis

# API Key do Google Gemini (OBRIGATÓRIO)
GEMINI_API_KEY=sua_api_key_aqui

# Configurações do Servidor
NODE_ENV=production
PORT=3000

# Configurações do Puppeteer (Railway)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable
CHROME_PATH=/usr/bin/google-chrome-stable
DISPLAY=:99

# Configurações do WhatsApp (Opcionais)
WHATSAPP_SESSION_PATH=./.wwebjs_auth
WHATSAPP_TIMEOUT=60000

# Configurações de Log (Opcionais)
LOG_LEVEL=info
DEBUG_MODE=false